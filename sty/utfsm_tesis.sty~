		{\fontsize{14pt}{1em}\selectfont \bf SANTIAGO -- CHILE}\\ \vspace{2cm}
		\includegraphics[height=33mm]{images/logo_usm}\\ \vspace{2cm}
		{\fontsize{20pt}{1em}\selectfont \bf ``\uppercase\expandafter{\@title}''}\\ \vspace{2.5cm}
		{\fontsize{14pt}{1em}\selectfont \bf \uppercase\expandafter{\@author}}\\ \vspace{0.4cm}
		{\fontsize{12pt}{1em}\selectfont \bf MEMORIA DE TITULACI\'ON PARA OPTAR AL T\'ITULO DE\\ INGENIERO CIVIL INFORM\'ATICO}\\ \vspace{0.4cm}
		{\fontsize{12pt}{1em}\selectfont \bf PROFESOR GU\'IA: \uppercase\expandafter{\@profguia}\\ PROFESOR CORREFERENTE: \uppercase\expandafter{\@profcorr}}\\ \vspace{0.7cm}
		{\fontsize{14pt}{1em}\selectfont \bf \uppercase\expandafter{\@submitdate}}\\ \vspace{0.4cm}
		{\fontsize{8.3pt}{1em}\selectfont \bf MATERIAL DE REFERENCIA, SU USO NO INVOLUCRA RESPONSABILIDAD DEL AUTOR O DE LA INSTITUCI\'ON}\\
	\end{center}
	\newpage
}

