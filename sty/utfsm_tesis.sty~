\def\titlep{
	\thispagestyle{empty}
	\begin{center}
		{\fontsize{18pt}{1em}\selectfont UNIVERSIDAD T\'ECNICA FEDERICO SANTA MAR\'IA}\\ \vspace{0.5cm}
		{\fontsize{16pt}{1em}\selectfont DEPARTAMENTO DE \uppercase\expandafter{\@dept}}\\
		{\fontsize{14pt}{1em}\selectfont SANTIAGO -- CHILE}\\ \vspace{2cm}
		\includegraphics[height=33mm]{images/logo_usm}\\ \vspace{2cm}
		{\fontsize{20pt}{1em}\selectfont ``\uppercase\expandafter{\@title}''}\\ \vspace{3cm}
		{\fontsize{14pt}{1em}\selectfont \uppercase\expandafter{\@author}}\\ \vspace{0.4cm}
		{\fontsize{12pt}{1em}\selectfont MEMORIA DE TITULACI\'ON PARA OPTAR AL T\'ITULO DE\\ INGENIERO CIVIL INFORM\'ATICO}\\ \vspace{0.4cm}
		{\fontsize{12pt}{1em}\selectfont PROFESOR GU\'IA: \uppercase\expandafter{\@profguia}}\\ \vspace{1cm}
		{\fontsize{14pt}{1em}\selectfont \uppercase\expandafter{\@submitdate}}\\
	\end{center}
	\newpage
}

\def\signaturepage{
